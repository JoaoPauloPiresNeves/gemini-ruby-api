<div style="
  max-width:700px;
  margin:60px auto;
  padding:30px 40px;
  border-radius:18px;
  font-family:'Inter', system-ui, sans-serif;
  background:#1b1b2b;
  color:#e6e6f0;
  box-shadow:0 10px 30px rgba(0,0,0,0.4);
  border:1px solid rgba(255,255,255,0.05);
  transition:transform 0.3s ease, box-shadow 0.3s ease;
"
onmouseover="this.style.transform='translateY(-4px)'; this.style.boxShadow='0 14px 40px rgba(0,0,0,0.6)';"
onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 10px 30px rgba(0,0,0,0.4)';"
>
  <div style="display:flex; align-items:center; margin-bottom:20px;">
    <div style="
      background:linear-gradient(135deg,#6a5acd,#00bcd4);
      width:48px; height:48px;
      border-radius:50%;
      display:flex; align-items:center; justify-content:center;
      color:#fff;
      font-weight:bold;
      font-size:20px;
      margin-right:12px;
    ">
      P
    </div>
    <strong style="font-size:22px; color:#fff;">PiresGPT</strong>
  </div>

  <p style="
    font-size:18px;
    line-height:1.7;
    color:#d8d8eb;
    margin:0;
  ">
    <%= @txt %>
  </p>
</div>
